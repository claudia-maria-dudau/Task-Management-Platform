<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body style="margin-top:-50px">
    <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-dark bg-primary">
        @Html.ActionLink("Task Management Platform", "Index", "Home", new { area = "" }, htmlAttributes: new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                @if (User.IsInRole("User") || User.IsInRole("Membru") || User.IsInRole("Organizator") || User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Afisare Echipe", "Index", "Teams", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Creare Echipa", "New", "Teams", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                }

                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Afisare Utilizatori", "Index", "Users", routeValues: null, htmlAttributes: new { @class = "nav-link" })</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">&copy; @DateTime.Now.Year - Dudau Claudia &amp; Costrun Larisa </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
